---
import RightSidebarPanel from './RightSidebarPanel.astro';
import MobileTableOfContents from './TableOfContents/MobileTableOfContents.astro';
import TableOfContents from './TableOfContents.astro';
import type { StarlightRouteData as Props } from '../utils/route-data'

const { toc, ...rest } = Astro.props;
---

{
	toc && (
		<>
			<MobileTableOfContents {...{toc, ...rest}} />
			<RightSidebarPanel>
				<TableOfContents {...{toc,...rest}} />
			</RightSidebarPanel>
		</>
	)
}
